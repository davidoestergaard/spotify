---
const { variant = "primary", size = "medium" } = Astro.props;
---

<button data-variant={variant} data-size={size}>
  <slot />
</button>

<style>
  button:hover {
    scale: 1.04;
  }

  /* Variants */
  [data-variant="primary"] {
    background: whitesmoke;
    color: black ;
  }

  [data-variant="secondary"] {
    color: whitesmoke;
    border: 1px solid;
  }

  [data-variant="tertiary"] {
    color: white;
  }
  [data-variant="tertiary"]:hover {
    color: white;
  }

  [data-variant="tertiary"]:has(+ [data-variant="primary"]) {
    padding-inline: 0.5rem ;
  }

  /* Sizes */
  [data-size="medium"] {
  }
  [data-size="small"] {
  }
</style>